<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.ebayopensource.turmeric.runtime.tests</groupId>
    <artifactId>turmeric-runtime-tests-parent</artifactId>
    <version>1.1.0.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <groupId>org.ebayopensource.turmeric.runtime.tests</groupId>
  <artifactId>AdvertisingUniqueIDServiceV1Consumer</artifactId>
  <packaging>jar</packaging>
  <name>Turmeric Runtime :: Tests :: AdvertisingUniqueIDServiceV1Consumer</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${basedir}</directory>
              <includes>
                <include>temp*.xml</include>
                <include>*.log</include>
              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.ebayopensource.turmeric.runtime.tests</groupId>
      <artifactId>AdvertisingUniqueIDServiceV1</artifactId>
      <version>${project.version}</version>
      </dependency>
    <dependency>
      <groupId>org.ebayopensource.turmeric.runtime.tests</groupId>
      <artifactId>AdvertisingUniqueIDServiceV1Impl</artifactId>
      <version>${project.version}</version>
      </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.ebayopensource.turmeric.runtime.tests</groupId>
    	<artifactId>SOATestsCommon</artifactId>
    	<version>${project.version}</version>
    </dependency>
    <dependency>
    	<groupId>org.apache.mina</groupId>
    	<artifactId>mina-core</artifactId>
    	<version>1.1.5</version>
    </dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<scope>test</scope>
		</dependency>
  </dependencies>
    <profiles>
    <profile>
      <id>external-jetty</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <systemPropertyVariables>
                <external.jetty.server.port>8080</external.jetty.server.port>
                <java.util.logging.config.file>turmeric-test.properties</java.util.logging.config.file>
              </systemPropertyVariables>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <properties>
    <requiredServices />
    <serviceName>AdvertisingUniqueIDServiceV1</serviceName>
    <serviceGroupID>org.ebayopensource.turmeric.runtime.tests</serviceGroupID>
  </properties>
</project>
