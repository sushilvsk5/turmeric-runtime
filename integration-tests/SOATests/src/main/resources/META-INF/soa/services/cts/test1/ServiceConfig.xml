<service-config group="SOAWebService" service-name="test1"
	xmlns="http://www.ebayopensource.org/turmeric/common/config">
	<service-impl-class-name>
		org.ebayopensource.turmeric.runtime.tests.service1.sample.services.message.Test1ServiceImpl
	</service-impl-class-name>
	<service-interface-class-name>
		org.ebayopensource.turmeric.runtime.tests.service1.sample.services.message.Test1Service
	</service-interface-class-name>
	<current-version>1.1.0</current-version>
	<supported-version>1.0.0</supported-version>
	<service-instance-config>
		<provider-options>
			<supported-data-bindings>XML</supported-data-bindings>
			<supported-data-bindings>NV</supported-data-bindings>
			<supported-data-bindings>JSON</supported-data-bindings>
			<supported-data-bindings>FAST_INFOSET</supported-data-bindings>
			<supported-data-bindings>JACKSON_JSON</supported-data-bindings>
			<supported-data-bindings>JACKSON_SMILE</supported-data-bindings>
			<supported-data-bindings>AALTO_XML</supported-data-bindings>			
			<error-mapping-handler-class-name>
				org.ebayopensource.turmeric.runtime.tests.service1.sample.errors.TestServerErrorMapper
			</error-mapping-handler-class-name>
			<version-check-handler>org.ebayopensource.turmeric.runtime.spf.impl.pipeline.NumericVersionCheckHandler
			</version-check-handler>
			<header-mapping-options>
				<option name="X-TURMERIC-OPERATION-NAME">queryop</option>
				<option name="X-TURMERIC-SERVICE-VERSION">query[ver]</option>
				<option name="X-TURMERIC-RESPONSE-DATA-FORMAT">path[2]</option>
				<option name="X-TURMERIC-REQUEST-DATA-FORMAT">query[reqbind]</option>
			</header-mapping-options>
		</provider-options>
		<pipeline-config>
			<request-handlers>
				<handler name="G11N">
					<class-name>org.ebayopensource.turmeric.runtime.spf.impl.handlers.G11nHandler
					</class-name>
				</handler>

				<handler name="TestRequestObjectNodeAccess">
					<class-name>org.ebayopensource.turmeric.runtime.tests.service1.sample.handlers.RequestObjectNodeAccessHandler
					</class-name>
				</handler>
				<handler name="TestRequestHeaderRead">
					<class-name>org.ebayopensource.turmeric.runtime.tests.service1.sample.handlers.ReadHeaderHandler
					</class-name>
				</handler>
				<handler name="TestExceptionContinueOnError"
					continue-on-error="true">
					<class-name>org.ebayopensource.turmeric.runtime.tests.service1.sample.handlers.ExceptionTestHandler
					</class-name>
				</handler>
				<handler name="TestExceptionStopOnError" continue-on-error="false">
					<class-name>org.ebayopensource.turmeric.runtime.tests.service1.sample.handlers.ExceptionTestHandler
					</class-name>
				</handler>
			</request-handlers>
			<response-handlers>
				<handler name="TestResponseHeaderSet">
					<class-name>org.ebayopensource.turmeric.runtime.tests.service1.sample.handlers.SetResponseHeaderHandler
					</class-name>
				</handler>
				<handler name="TestResponseObjectNodeAccess">
					<class-name>org.ebayopensource.turmeric.runtime.tests.service1.sample.handlers.ResponseObjectNodeAccessHandler
					</class-name>
				</handler>
			</response-handlers>
		</pipeline-config>
		<data-binding-config>
			<data-binding name="XML">
				<mime-type>text/xml</mime-type>
				<serializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.xml.JAXBXMLSerializerFactory
				</serializer-factory-class-name>
				<deserializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.xml.JAXBXMLDeserializerFactory
				</deserializer-factory-class-name>
				<options>
					<option name="elementFormDefault">UNQUALIFIED</option>
				</options>
			</data-binding>
			<data-binding name="NV">
				<mime-type>text/plain</mime-type>
				<serializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.nv.JAXBNVSerializerFactory
				</serializer-factory-class-name>
				<deserializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.nv.JAXBNVDeserializerFactory
				</deserializer-factory-class-name>
				<options>
					<option name="useSchemaInfo">false</option>
					<option name="elementFormDefault">UNQUALIFIED</option>
				</options>
			</data-binding>
			<data-binding name="JSON">
				<mime-type>application/json</mime-type>
				<serializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.json.JAXBJSONSerializerFactory
				</serializer-factory-class-name>
				<deserializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.json.JAXBJSONDeserializerFactory
				</deserializer-factory-class-name>
				<options>
					<option name="useSchemaInfo">false</option>
					<option name="elementFormDefault">UNQUALIFIED</option>
				</options>
			</data-binding>
			<data-binding name="FAST_INFOSET">
				<mime-type>application/fastinfoset</mime-type>
				<serializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.fastinfoset.JAXBFastInfosetSerializerFactory
				</serializer-factory-class-name>
				<deserializer-factory-class-name>
					org.ebayopensource.turmeric.runtime.common.impl.binding.jaxb.fastinfoset.JAXBFastInfosetDeserializerFactory
				</deserializer-factory-class-name>
				<options>
					<option name="elementFormDefault">UNQUALIFIED</option>
				</options>
			</data-binding>
			<data-binding name="JACKSON_JSON">
				<mime-type>application/json</mime-type>
				<serializer-factory-class-name>
					com.cts.turmeric.runtime.common.impl.binding.jaxb.jackson.JAXBJSONSerializerFactory
				</serializer-factory-class-name>
				<deserializer-factory-class-name>
					com.cts.turmeric.runtime.common.impl.binding.jaxb.jackson.JAXBJSONDeserializerFactory
				</deserializer-factory-class-name>
				<options>
					<option name="useSchemaInfo">false</option>
					<option name="elementFormDefault">UNQUALIFIED</option>
				</options>
			</data-binding>
			<data-binding name="JACKSON_SMILE">
				<mime-type>application/smile</mime-type>
				<serializer-factory-class-name>
					com.cts.turmeric.runtime.common.impl.binding.jaxb.jackson.JAXBSMILESerializerFactory
				</serializer-factory-class-name>
				<deserializer-factory-class-name>
					com.cts.turmeric.runtime.common.impl.binding.jaxb.jackson.JAXBSMILEDeserializerFactory
				</deserializer-factory-class-name>
				<options>
					<option name="useSchemaInfo">false</option>
					<option name="elementFormDefault">UNQUALIFIED</option>
				</options>
			</data-binding>
			<data-binding name="AALTO_XML">
				<mime-type>text/xml</mime-type>
				<serializer-factory-class-name>
					com.cts.turmeric.runtime.common.impl.binding.jaxb.aalto.JAXBXMLSerializerFactory
				</serializer-factory-class-name>
				<deserializer-factory-class-name>
					com.cts.turmeric.runtime.common.impl.binding.jaxb.aalto.JAXBXMLDeserializerFactory
				</deserializer-factory-class-name>
				<options>
					<option name="elementFormDefault">UNQUALIFIED</option>
				</options>
			</data-binding>
		</data-binding-config>
	</service-instance-config>
</service-config>
